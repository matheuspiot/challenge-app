{
  "name": "desafio-main",
  "version": "1.0.0",
  "description": "Electron main process",
  "author": "Clube Piot",
  "main": "src/main.js",
  "scripts": {
    "dev": "set ELECTRON_RUN_AS_NODE=&& electron .",
    "build": "echo Main pronto",
    "dist:win": "electron-builder --win nsis",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.clubepiot.desafios",
    "productName": "Desafio de Corrida",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "src/**/*",
      "package.json",
      "!src/**/*.map"
    ],
    "extraResources": [
      {
        "from": "../renderer/dist",
        "to": "renderer"
      }
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "matheuspiot",
        "repo": "challenge-app",
        "releaseType": "release",
        "private": false
      }
    ],
    "win": {
      "signAndEditExecutable": false,
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^11.8.1",
    "desafio-corrida-desktop": "file:..",
    "electron-updater": "^6.3.9"
  },
  "devDependencies": {
    "electron": "^35.0.0",
    "electron-builder": "^25.1.8"
  }
}
